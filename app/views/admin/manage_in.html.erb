<div id="banner-in">	
	<div id="content">
	     <div id="list-photo"><br>
                <% project=@project.first %>
                <label>项目名称：<%= project.project_name %></label><br><br>
		<label style="margin-right:190px;margin-left:65px">照片</label>照片描述<br><br>
		<% @pictures.each do |p| %>
		<form action="change_info?pic_id=<%= p.id %>" method="post">
		<div id="list-item">
                <div style="width:290px">&nbsp;&nbsp; 
			<img src=<%= "http://115.29.36.94:999/" + p.file_path %> width="40%" height="40%"/> &nbsp;
			<%= p.file_path[0,21] %>
       			</div>
			<div style="width:200px"><%= p.description %>&nbsp;</div>
       			<div style="width:250px">
			<textarea name="pic_info" cols="15" rows="6"></textarea>
			<input type="submit" name="change_info" value="修改">
        		|<a href="delete_pic?pic_id=<%= p.id %>">删除</a></div>
		</div><br>
		</form>
 		<% end %>
  	     </div>
	<div id="page">
      	 	<ul>
	 	<li class="page-first"><a href="mange_in" title="首页" class="active">首页</a></li>
	 	<li class="page-pro"><a href="manage_in?current_page=<%= @current_page-1 %>" title="进入前一页" class="active">《</a></li>
