	 	<li class="page-next"><a href="manage_in?current_page=<%= @current_page+1 %>" title="进入下一页" class="active">》</a></li>
	 	<li class="page-item"><a href="manage_in?current_page=<%= @max_page %>" title="尾页" class="active">尾页</a></li>
	 	</ul>
	</div>
	<div id="upload">	
		<fieldset style="margin-top:50px">
       		<form action="upload" method="post" enctype="multipart/form-data">
         	上传照片到该项目<label style="margin-left:120px">照片描述</label>
     		&nbsp;<center><p style="color:green"><%= flash[:notice] %></p></center>
     		&nbsp;<center><p style="color:red"><%= flash[:alert] %></p></center>
		<input type="hidden" name="userid" value=<%= u.token %>>
                <input type="hidden" name="code" value=<%= project.code %>>
	        <input type="file" name="pic" value="&nbsp;上传照片&nbsp;"><textarea name="extra" rows="5" cols="40"></textarea>
		<input type="submit" name="upload" value="开始上传">
		</form>
		</fieldset>
	</div>
	</div>
</div>
